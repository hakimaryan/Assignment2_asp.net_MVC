</head>
@model asp.net_MVC.Models.Contact

@{
    ViewBag.Title = "Create";
}

<h2>Contact</h2>


@using (Html.BeginForm())
{

<p class="lead">Contact if you have any questions</p>



<script src="http://maps.googleapis.com/maps/api/js">
</script>

<script>
    var myCenter = new google.maps.LatLng(50.027067, 8.277374);
    var marker;

    function initialize() {
        var mapProp = {
            center: myCenter,
            zoom: 15,
            mapTypeId: window.google.maps.MapTypeId.ROADMAP
        };

        var map = new window.google.maps.Map(document.getElementById("googleMap"), mapProp);

        marker = new window.google.maps.Marker({
            position: myCenter,
        });

        marker.setMap(map);
        var infowindow = new window.google.maps.InfoWindow({
            content: "Audio-Technica Limited Lorenz-Schott-Straße 5 55252 Wiesbaden Germany"
        });

        infowindow.open(map,marker);
    
    }

    google.maps.event.addDomListener(window, 'load', initialize);
</script>

<section id="contact-info">
    <div class="text-primary" style="padding-left: 100px;">

    </div>
    <div>
        <div id="googleMap" style="width:100%;height:380px;"></div>
        </div>
            <div class="gmap-area">

                <div class="container">


                    <div class="row">
                        <div class="col-sm-7 map-content">
                        </div>
                    </div>
                </div>
            </div>
</section>  <!--/gmap_area -->



    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Contact</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
